@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml"; // hoặc Layout = null nếu không dùng layout
}

<!-- Màu nền nhẹ nhàng -->
<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e0e0e0);
    }

    .forgot-password-card {
        border-radius: 16px;
        background-color: #fff;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .form-icon {
        font-size: 50px;
        color: #dc3545;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-custom {
        background-color: #dc3545;
        color: #fff;
        font-weight: 500;
        transition: 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #bb2d3b;
            color: #fff;
        }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card forgot-password-card p-5" style="width: 100%; max-width: 500px;">
        <div class="text-center mb-4">
            <div class="form-icon mb-2">
                <i class="fas fa-unlock-alt"></i>
            </div>
            <h3 class="mb-2">Quên mật khẩu</h3>
            <p class="text-muted">Vui lòng nhập email bạn đã đăng ký để nhận mã xác minh.</p>
        </div>

        <form method="post">
            <div class="mb-3">
                <label class="form-label" for="email">Địa chỉ Email</label>
                <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="example@email.com" required />
            </div>

            <button type="submit" class="btn btn-custom w-100 btn-lg mt-2">
                <i class="fas fa-paper-plane"></i> Gửi mã xác minh
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center mt-4">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }
    </div>
</div>
