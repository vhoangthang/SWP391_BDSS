@model List<BloodDonation.Models.BloodRequest>

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["Title"] = "Yêu cầu nhận máu";
}

<style>
    .bdss-badge-soft {
        display: inline-block;
        padding: 0.35em 1.1em;
        font-size: 1em;
        font-weight: 500;
        border-radius: 2em;
        background: #e0e7ff;
        color: #373a47;
        letter-spacing: 0.02em;
        box-shadow: none;
        border: none;
    }
    .bdss-badge-soft-danger {
        background: #fde8e8;
        color: #b91c1c;
    }
    .bdss-badge-soft-warning {
        background: #fef9c3;
        color: #b45309;
    }
    .bdss-badge-soft-success {
        background: #d1fae5;
        color: #047857;
    }
    .bdss-badge-soft-secondary {
        background: #f3f4f6;
        color: #6b7280;
    }
    .bdss-badge-soft-primary {
        background: #dbeafe;
        color: #2563eb;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-2 fw-bold">📨 Yêu cầu nhận máu</h2>
    <p class="text-muted">Quản lý các yêu cầu nhận máu từ cơ sở y tế</p>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="🔍 Tìm kiếm..." />
        </div>
    </div>

    <div class="table-responsive shadow-sm rounded bg-white">
        <table class="table table-hover table-borderless align-middle mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th>Thông tin cơ sở</th>
                    <th>Nhóm máu</th>
                    <th>Ngày yêu cầu</th>
                    <th>Số lượng (CC)</th>
                    <th>Mức độ</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var req in Model)
                {
                    if (req.Status == "Approved" || req.Status == "Completed")
                    {
                        <tr>
                            <td>
                                <strong>@req.MedicalCenter?.Name</strong><br />
                            </td>
                            <td class="text-center">@req.BloodType?.Type</td>
                            <td class="text-center">@req.RequestDate.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">@req.Quantity</td>
                            <td class="text-center">
                                @if (req.IsEmergency)
                                {
                                    <span class="bdss-badge-soft bdss-badge-soft-danger">Khẩn cấp</span>
                                }
                                else
                                {
                                    <span class="bdss-badge-soft bdss-badge-soft-warning">Thông thường</span>
                                }
                            </td>
                            <td class="text-center">
                                @switch (req.Status)
                                {
                                    case "Pending":
                                        <span class="bdss-badge-soft bdss-badge-soft-warning">Chờ duyệt</span>; break;
                                    case "Approved":
                                        <span class="bdss-badge-soft bdss-badge-soft-primary">Đã duyệt</span>; break;
                                    case "Completed":
                                        <span class="bdss-badge-soft bdss-badge-soft-success">Hoàn thành</span>; break;
                                    case "Rejected":
                                        <span class="bdss-badge-soft bdss-badge-soft-danger">Từ chối</span>; break;
                                    default:
                                        <span class="bdss-badge-soft bdss-badge-soft-secondary">@req.Status</span>; break;
                                }
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("BloodRequestDetails", "Staff", new { id = req.BloodRequestID })" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye me-1"></i>Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>
