@model List<BloodDonation.Models.DonationAppointment>

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["Title"] = "Đăng ký hiến máu";
}

<div class="container mt-4">
    <h2 class="mb-2 fw-bold">🩸 Danh sách đăng ký hiến máu</h2>
    <p class="text-muted">Quản lý và xử lý các đơn đăng ký hiến máu</p>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="🔍 Tìm kiếm..." />
        </div>
    </div>

    <div class="table-responsive shadow-sm rounded bg-white">
        <table class="table table-hover table-borderless align-middle mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th>Người hiến máu</th>
                    <th>Nhóm máu</th>
                    <th>Ngày đăng ký</th>
                    <th>Thời gian</th>
                    <th>Địa điểm</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.Donor?.Name</strong><br />
                            <small class="text-muted">@item.Donor?.ContactNumber</small>
                        </td>
                        <td class="text-center">@item.BloodType?.Type</td>
                        <td class="text-center">@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">@item.TimeSlot</td>
                        <td>Quận @item.Donor?.Address</td>
                        <td class="text-center">
                            @switch (item.Status?.ToLower())
                            {
                                case "pending":
                                    <span class="badge bg-warning text-dark">⏳ Chờ xác nhận</span>
                                    ; break;
                                case "confirmed":
                                    <span class="badge bg-primary">✔ Đã xác nhận</span>
                                    ; break;
                                case "approved":
                                    <span class="badge bg-info text-dark">🟦 Đã duyệt</span>
                                    ; break;
                                case "completed":
                                    <span class="badge bg-success">✅ Hoàn tất</span>
                                    ; break;
                                case "rejected":
                                    <span class="badge bg-danger">❌ Từ chối</span>
                                    ; break;
                                default:
                                    <span class="badge bg-secondary">@item.Status</span>
                                    ; break;
                            }
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("DonorRequestDetails", "Staff", new { id = item.AppointmentID })" class="btn btn-outline-danger btn-sm">
                                Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
