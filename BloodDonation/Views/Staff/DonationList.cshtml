@model List<BloodDonation.Models.DonationAppointment>

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["Title"] = "Đăng ký hiến máu";
}

<style>
    .bdss-badge-soft {
        display: inline-block;
        padding: 0.35em 1.1em;
        font-size: 1em;
        font-weight: 500;
        border-radius: 2em;
        background: #e0e7ff;
        color: #373a47;
        letter-spacing: 0.02em;
        box-shadow: none;
        border: none;
    }
    .bdss-badge-soft-danger {
        background: #fde8e8;
        color: #b91c1c;
    }
    .bdss-badge-soft-warning {
        background: #fef9c3;
        color: #b45309;
    }
    .bdss-badge-soft-success {
        background: #d1fae5;
        color: #047857;
    }
    .bdss-badge-soft-secondary {
        background: #f3f4f6;
        color: #6b7280;
    }
    .bdss-badge-soft-primary {
        background: #dbeafe;
        color: #2563eb;
    }
    .bdss-badge-soft-info {
        background: #e0f2fe;
        color: #0284c7;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-2 fw-bold">🩸 Danh sách đăng ký hiến máu</h2>
    <p class="text-muted">Quản lý và xử lý các đơn đăng ký hiến máu</p>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="🔍 Tìm kiếm..." />
        </div>
    </div>

    <div class="table-responsive shadow-sm rounded bg-white">
        <table class="table table-hover table-borderless align-middle mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th>Người hiến máu</th>
                    <th>Nhóm máu</th>
                    <th>Ngày đăng ký</th>
                    <th>Thời gian</th>
                    <th>Địa điểm</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.Donor?.Name</strong><br />
                            <small class="text-muted">@item.Donor?.ContactNumber</small>
                        </td>
                        <td class="text-center">@item.BloodType?.Type</td>
                        <td class="text-center">@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">@item.TimeSlot</td>
                        <td>Quận @item.Donor?.Address</td>
                        <td class="text-center">
                            @switch (item.Status?.ToLower())
                            {
                                case "pending":
                                    <span class="bdss-badge-soft bdss-badge-soft-warning">Chờ xác nhận</span>; break;
                                case "confirmed":
                                    <span class="bdss-badge-soft bdss-badge-soft-primary">Đã xác nhận</span>; break;
                                case "approved":
                                    <span class="bdss-badge-soft bdss-badge-soft-primary">Đã duyệt</span>; break;
                                case "completed":
                                    <span class="bdss-badge-soft bdss-badge-soft-success">Hoàn thành</span>; break;
                                case "rejected":
                                    <span class="bdss-badge-soft bdss-badge-soft-danger">Từ chối</span>; break;
                                default:
                                    <span class="bdss-badge-soft bdss-badge-soft-secondary">@item.Status</span>; break;
                            }
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("DonorRequestDetails", "Staff", new { id = item.AppointmentID })" class="btn btn-outline-danger btn-sm">
                                Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
