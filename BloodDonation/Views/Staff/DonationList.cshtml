@model List<BloodDonation.Models.DonationAppointment>

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["Title"] = "Đăng ký hiến máu";
}

<style>
    .bdss-badge-soft {
        display: inline-flex;
        align-items: center;
        gap: 0.4em;
        padding: 0.35em 1.1em;
        font-size: 1em;
        font-weight: 500;
        border-radius: 2em;
        background: #e0e7ff;
        color: #373a47;
        letter-spacing: 0.02em;
        box-shadow: none;
        border: none;
    }
    .bdss-badge-soft-danger {
        background: #fde8e8;
        color: #b91c1c;
    }
    .bdss-badge-soft-warning {
        background: #fef9c3;
        color: #b45309;
    }
    .bdss-badge-soft-success {
        background: #d1fae5;
        color: #047857;
    }
    .bdss-badge-soft-secondary {
        background: #f3f4f6;
        color: #6b7280;
    }
    .bdss-badge-soft-primary {
        background: #dbeafe;
        color: #2563eb;
    }
    .bdss-badge-soft-info {
        background: #e0f2fe;
        color: #0284c7;
    }
    .bdss-table-card {
        background: #fff;
        border-radius: 1.2rem;
        box-shadow: 0 2px 16px 0 rgba(0,0,0,0.07);
        border: none;
        padding: 0.5rem 0.5rem 1.5rem 0.5rem;
    }
    .bdss-table th, .bdss-table td {
        vertical-align: middle !important;
        border: none !important;
    }
    .bdss-table thead th {
        background: #f8fafc;
        font-weight: 600;
        color: #22223b;
        border-bottom: 1.5px solid #e5e7eb !important;
    }
    .bdss-table tbody tr:not(:last-child) {
        border-bottom: 1px solid #f1f5f9;
    }
    .bdss-link-red {
        color: #ef4444;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s;
    }
    .bdss-link-red:hover {
        color: #b91c1c;
        text-decoration: underline;
    }
    .bdss-name {
        font-weight: 700;
        font-size: 1.08em;
        color: #22223b;
    }
    .bdss-phone {
        font-size: 0.98em;
        color: #64748b;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-2 fw-bold">🩸 Danh sách đăng ký hiến máu</h2>
    <p class="text-muted">Quản lý và xử lý các đơn đăng ký hiến máu</p>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Tìm kiếm..." />
        </div>
    </div>

    <div class="bdss-table-card">
        <table class="table bdss-table align-middle mb-0">
            <thead>
                <tr>
                    <th>Người đăng ký</th>
                    <th>Nhóm máu</th>
                    <th>Ngày đăng ký</th>
                    <th>Thời gian</th>
                    <th>Địa điểm</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="bdss-name">@item.Donor?.Name</div>
                            <div class="bdss-phone">@item.Donor?.ContactNumber</div>
                        </td>
                        <td class="text-center">@item.BloodType?.Type</td>
                        <td class="text-center">@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">@item.TimeSlot</td>
                        <td>Quận @item.Donor?.Address</td>
                        <td class="text-center">
                            @switch (item.Status?.ToLower())
                            {
                                case "pending":
                                    <span class="bdss-badge-soft bdss-badge-soft-warning"><span style="font-size:1.1em;">&#x23F3;</span> Chờ xác nhận</span>; break;
                                case "confirmed":
                                    <span class="bdss-badge-soft bdss-badge-soft-primary"><span style="font-size:1.1em;">&#x2714;</span> Đã xác nhận</span>; break;
                                case "approved":
                                    <span class="bdss-badge-soft bdss-badge-soft-primary"><span style="font-size:1.1em;">&#x2714;</span> Đã duyệt</span>; break;
                                case "completed":
                                    <span class="bdss-badge-soft bdss-badge-soft-success"><span style="font-size:1.1em;">&#x2714;</span> Hoàn thành</span>; break;
                                case "rejected":
                                    <span class="bdss-badge-soft bdss-badge-soft-danger"><span style="font-size:1.1em;">&#x2716;</span> Từ chối</span>; break;
                                default:
                                    <span class="bdss-badge-soft bdss-badge-soft-secondary">@item.Status</span>; break;
                            }
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("DonorRequestDetails", "Staff", new { id = item.AppointmentID })" class="bdss-link-red">
                                Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
