@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ thống hiến máu - Medical Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/medicalCenter.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="main-wrapper">
        <nav class="sidebar">
            <h2>Hệ thống hiến máu</h2>
            <ul class="sidebar-menu">
                <li><a href="@Url.Action("Index", "MedicalCenter")" class="@(currentController == "MedicalCenter" && currentAction == "Index" ? "active" : "")"><span class="icon"><i class="fas fa-plus-circle"></i></span>Tạo yêu cầu</a></li>
                <li><a href="@Url.Action("BloodRequestList", "MedicalCenter")" class="@(currentController == "MedicalCenter" && currentAction == "BloodRequestList" ? "active" : "")"><span class="icon"><i class="fas fa-list"></i></span>Danh sách nhận máu</a></li>
                <li><a href="@Url.Action("NotificationDetail", "MedicalCenter", new { notificationId = 0 })" class="@(currentController == "MedicalCenter" && currentAction == "NotificationDetail" ? "active" : "")"><span class="icon"><i class="fas fa-search"></i></span>Chi tiết đơn máu</a></li>
                <li><a href='@Url.Action("MedicalCenterNotifications", "MedicalCenter")' class="@(currentController == "MedicalCenter" && currentAction == "MedicalCenterNotifications" ? "active" : "")"><span class="icon"><i class="fas fa-bell"></i></span>Thông báo @if (ViewBag.UnreadNotificationCount > 0) { <span class="badge bg-danger ms-2" id="notificationBadge">@ViewBag.UnreadNotificationCount</span> }</a></li>
                <li><a href="@Url.Action("Logout", "Login")"><span class="icon"><i class="fas fa-sign-out-alt"></i></span>Đăng xuất</a></li>
            </ul>
        </nav>
        <div class="main-content">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html> 