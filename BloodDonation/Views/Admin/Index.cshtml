@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Hệ thống hiến máu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2">
                <div class="sidebar">
                    <h3><i class="fas fa-tint"></i> Admin Panel</h3>
                    <ul class="sidebar-menu">
                        <li><a href="#" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                        <li><a href="@Url.Action("UserManagement", "Admin")"><i class="fas fa-users"></i> Quản lý người dùng</a></li>
                        <li><a href="@Url.Action("BloodRequestManagement", "Admin")"><i class="fas fa-clipboard-list"></i> Yêu cầu nhận máu</a></li>
                        <li><a href="@Url.Action("BloodInventoryManagement", "Admin")"><i class="fas fa-boxes"></i> Kho máu</a></li>
                        <li><a href="@Url.Action("Logout", "Login")"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a></li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10">
                <div class="main-content">
                    <!-- Header -->
                    <div class="header">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h1 class="mb-0"><i class="fas fa-tachometer-alt text-danger"></i> Admin Dashboard</h1>
                                <p class="text-muted mb-0">Quản lý hệ thống hiến máu</p>
                            </div>
                            <div class="col-md-4">
                                <div class="user-profile">
                                    <a href="#"><i class="fas fa-user-circle"></i> @Context.Session.GetString("Username")</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics Cards -->
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="stats-card users">
                                <div class="text-center">
                                    <div class="stats-icon text-info">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div class="stats-number text-info">@ViewBag.TotalUsers</div>
                                    <div class="stats-label">Tổng số người dùng</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="stats-card requests">
                                <div class="text-center">
                                    <div class="stats-icon text-warning">
                                        <i class="fas fa-clipboard-list"></i>
                                    </div>
                                    <div class="stats-number text-warning">@ViewBag.TotalBloodRequests</div>
                                    <div class="stats-label">Yêu cầu nhận máu</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="stats-card inventory">
                                <div class="text-center">
                                    <div class="stats-icon text-success">
                                        <i class="fas fa-boxes"></i>
                                    </div>
                                    <div class="stats-number text-success">@ViewBag.TotalBloodInventory</div>
                                    <div class="stats-label">Tổng lượng máu (L)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="quick-actions">
                        <h4 class="mb-4"><i class="fas fa-bolt"></i> Thao tác nhanh</h4>
                        <div class="row">
                            <div class="col-md-4">
                                <a href="@Url.Action("UserManagement", "Admin")" class="action-btn btn-users">
                                    <i class="fas fa-users"></i><br>
                                    Quản lý người dùng
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="@Url.Action("BloodRequestManagement", "Admin")" class="action-btn btn-requests">
                                    <i class="fas fa-clipboard-list"></i><br>
                                    Yêu cầu nhận máu
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="@Url.Action("BloodInventoryManagement", "Admin")" class="action-btn btn-inventory">
                                    <i class="fas fa-boxes"></i><br>
                                    Quản lý kho máu
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js"></script>
</body>
</html> 